<div class="form">
<h1> Edit Article </h1>

<%= form_for @article, method: :patch do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
 </p>
  <p>
    <%= f.label :text%> <br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %> <br>
  </p>

<% end %>
</div>

<h4> <%= link_to 'Back to Articles', articles_path %> </h4>
